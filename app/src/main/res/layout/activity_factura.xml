<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".FacturaActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FACTURA VEHICULOS"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="25sp"
        android:onClick="regresar"
        android:layout_marginTop="20dp"

        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="33dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CODIGO FACTURA"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="167dp"
        tools:layout_editor_absoluteY="78dp" />

    <EditText
        android:id="@+id/etCodFactura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="ingrese codigo 0000"
        android:textColorHint="#757575"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="98dp"
        tools:layout_editor_absoluteY="111dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fecha"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="176dp"
        tools:layout_editor_absoluteY="180dp" />

    <EditText
        android:id="@+id/etfacFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:hint="Ingrese fecha"
        android:textColorHint="#757575"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="108dp"
        tools:layout_editor_absoluteY="227dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:text="Placa"
        android:textSize="20sp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="20dp"
        tools:layout_editor_absoluteX="189dp"
        tools:layout_editor_absoluteY="302dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/etPlacaFac"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:ems="10"
            android:inputType="text"
            android:hint="Ingrese placa"
            android:textAlignment="center"
            android:textColorHint="#757575"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="345dp" />

        <Button
            android:id="@+id/btConsultarPlacaFac"
            android:layout_width="33dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:textSize="18dp"
            android:onClick="ConsultarPlaca"
            android:text="Consultar" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:textSize="20dp"
            android:layout_weight="1"
            android:textAlignment="center"
            android:text="Marca" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Modelo"
            android:textAlignment="center"
            android:textSize="20dp"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:textAlignment="center"
            android:text="Valor" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">


        <EditText
            android:id="@+id/etMarcaFac"
            android:layout_width="137dp"
            android:layout_height="50dp"
            android:ems="10"
            android:enabled="false"
            android:inputType="text"
            android:text=""
            android:textAlignment="center"
            tools:ignore="SpeakableTextPresentCheck"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="345dp" />

        <EditText
            android:id="@+id/etModeloFac"
            android:layout_width="148dp"
            android:layout_height="50dp"
            android:ems="10"
            android:enabled="false"
            android:inputType="text"
            android:text=""
            android:textColorHint="#757575"
            tools:ignore="SpeakableTextPresentCheck"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="345dp" />

        <EditText
            android:id="@+id/etValorFac"
            android:layout_width="125dp"
            android:layout_height="50dp"
            android:ems="10"
            android:enabled="false"
            android:inputType="text"
            android:text=""
            android:textColorHint="#757575"
            tools:ignore="SpeakableTextPresentCheck"
            tools:layout_editor_absoluteX="95dp"
            tools:layout_editor_absoluteY="345dp" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/cbPlaca"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:text="Vehiculo Activo"
        android:textSize="20dp"
        android:enabled="false"
        android:gravity="center"/>
    <CheckBox
        android:id="@+id/cbFac"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:text="Factura Activa"
        android:textSize="20dp"
        android:enabled="false"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="Guardar"
            android:text="Guardar"
            android:textSize="25dp" />

        <Button
            android:id="@+id/btConsultar"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="Consultar"
            android:textSize="25dp"
            android:text="Consultar" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btAnular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="Anular"
            android:textSize="25dp"
            android:text="Anular" />

        <Button
            android:id="@+id/btCancelar"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="Cancelar"
            android:textSize="25dp"
            android:text="Cancelar" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btRegresa"
            android:layout_width="199dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:onClick="regresar"
            android:textSize="25dp"
            android:text="Regresar" />

    </LinearLayout>

</LinearLayout>